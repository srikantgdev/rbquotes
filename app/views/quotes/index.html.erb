  <%# app/views/quotes/index.html.erb %>
<%= turbo_stream_from "quotes" %>

<main>
  <p style="color: green"><%= notice %></p>
  <div class="header mb-3">
    <div class="row">
      <div class="col col-md h3">Quotes</div>
      <div class="col col-md-3 text-right">
        <%= link_to "Add New quote", new_quote_path, 
            class: "btn btn-primary", data: { turbo_frame: dom_id(Quote.new) }
        %>
        </div>
    </div>
    <div>
      <% render 'shared/flash' %>
    </div>
  </div>

  <%= turbo_frame_tag Quote.new %>

  <%= turbo_frame_tag do %>
    <table class="table table-striped table-hover">
      <%= render @quotes %>
    </table>
  <% end %>
</main>
